{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "outDir": ".",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "composite": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "**/*.js"
  ]
}
