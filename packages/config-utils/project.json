{
  "name": "@redhat-cloud-services/frontend-components-config-utilities",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/config-utils",
  "projectType": "library",
  "tags": ["scope:build"],
  "targets": {
    "check-circular-imports": {
      "executor": "@redhat-cloud-services/frontend-components-executors:check-circular-imports",
      "options": {
        "sourceDir": "packages/config-utils/src"
      }
    },
    "build:bundles": {
      "dependsOn": ["^build:bundles"],
      "executor": "@redhat-cloud-services/frontend-components-executors:builder",
      "options": {
        "rootDir": "packages/config-utils/src",
        "main": "packages/config-utils/src/index.ts",
        "outputPath": "packages/config-utils/dist",
        "cjsTsConfig": "packages/config-utils/tsconfig.cjs.json"
      }
    },
    "build:packages": {
      "dependsOn": ["^build:packages"],
      "executor": "@redhat-cloud-services/frontend-components-executors:build-packages",
      "options": {
        "outputPath": "packages/config-utils/dist",
        "forceTypes": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": ["nx run @redhat-cloud-services/frontend-components-config-utilities:build:bundles", "nx run @redhat-cloud-services/frontend-components-config-utilities:build:packages"]
      },
      "dependsOn": ["^build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/config-utils/src/**/*", "packages/config-utils/package.json"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "preset": "conventionalcommits",
        "commitMessageFormat": "chore: bump {projectName} to {version} [skip ci]",
        "trackDeps": true
      },
      "dependsOn": ["^version"]
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notesFile": "packages/config-utils/CHANGELOG.md"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "distFolderPath": "packages/config-utils/dist",
        "access": "public"
      },
      "dependsOn": ["build"]
    },
    "tagRelease": {
      "executor": "nx:run-commands",
      "options": {
        "command": "git push --tags"
      }
    },
    "test:unit": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/config-utils/jest.config.ts"
      }
    }
  }
}
