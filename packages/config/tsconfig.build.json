{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "types": ["node"],
    "module": "commonjs",
    "target": "ES5",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.test.jsx", "src/**/*.spec.js", "src/**/*.test.js"]
}
