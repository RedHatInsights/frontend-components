{
  "name": "@redhat-cloud-services/frontend-components-config",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/config",
  "projectType": "library",
  "tags": ["scope:build"],
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": ["make-executable"]
    },
    "make-executable": {
      "executor": "nx:run-commands",
      "dependsOn": ["compile"],
      "options": {
        "command": "chmod +x packages/config/dist/bin/fec.js"
      }
    },
    "compile": {
      "executor": "@redhat-cloud-services/frontend-components-executors:builder",
      "dependsOn": ["^build"],
      "options": {
        "rootDir": "packages/config/src",
        "main": "packages/config/src/lib/index.ts",
        "outputPath": "packages/config/dist",
        "cjsTsConfig": "packages/config/tsconfig.build.json",
        "assets": [
          {
            "input": "packages/config/src/bin",
            "glob": "tsconfig.template.json",
            "output": "./bin"
          },
          {
            "input": "packages/config/src/lib",
            "glob": "crd-mock.yaml",
            "output": "./lib"
          }
        ]
      }
    },
    "check-circular-imports": {
      "executor": "@redhat-cloud-services/frontend-components-executors:check-circular-imports",
      "options": {
        "sourceDir": "packages/config/src"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/config/src/**/*", "packages/config/package.json"]
      }
    },
    "test:unit": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/config/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "preset": "conventionalcommits",
        "commitMessageFormat": "chore: bump {projectName} to {version} [skip ci]",
        "trackDeps": true
      },
      "dependsOn": ["^version"]
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notesFile": "packages/config/CHANGELOG.md"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "distFolderPath": "packages/config/dist",
        "access": "public"
      },
      "dependsOn": ["build"]
    },
    "tagRelease": {
      "executor": "nx:run-commands",
      "options": {
        "command": "git push --tags"
      }
    }
  }
}
