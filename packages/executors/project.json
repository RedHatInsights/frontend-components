{
  "name": "@redhat-cloud-services/frontend-components-executors",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/executors/src",
  "projectType": "library",
  "tags": ["scope:private"],
  "targets": {
    "build-scss-importer": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}/executors/build-styles/scss-workspace-importer.js"],
      "options": {
        "rootDir": "packages/executors/src",
        "main": "packages/executors/src/executors/build-styles/scss-workspace-importer.ts",
        "outputPath": "packages/executors/dist",
        "tsConfig": "packages/executors/tsconfig.scss-importer.json",
        "updateBuildableProjectDepsInPackageJson": false,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/executors/**/*.ts", "packages/executors/package.json", "packages/executors/executors.json"]
      }
    },
    "test:unit": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/executors/jest.config.ts"
      }
    }
  }
}
