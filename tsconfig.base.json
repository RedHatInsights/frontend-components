{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["jest", "@testing-library/react", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@redhat-cloud-services/chrome": ["packages/chrome/dist"],
      "@redhat-cloud-services/chrome/*": ["packages/chrome/dist/*"],
      "@redhat-cloud-services/frontend-components": ["packages/components/dist"],
      "@redhat-cloud-services/frontend-components-advisor-components": ["packages/advisor-components/dist"],
      "@redhat-cloud-services/frontend-components-advisor-components/*": ["packages/advisor-components/dist/*"],
      "@redhat-cloud-services/frontend-components-charts": ["packages/charts/dist"],
      "@redhat-cloud-services/frontend-components-charts/*": ["packages/charts/dist/*"],
      "@redhat-cloud-services/frontend-components-config": ["packages/config/dist"],
      "@redhat-cloud-services/frontend-components-config/*": ["packages/config/dist/*"],
      "@redhat-cloud-services/frontend-components-config-utilities": ["packages/config-utils/dist"],
      "@redhat-cloud-services/frontend-components-config-utilities/*": ["packages/config-utils/dist/*"],
      "@redhat-cloud-services/frontend-components-notifications": ["packages/notifications/dist"],
      "@redhat-cloud-services/frontend-components-notifications/*": ["packages/notifications/dist/*"],
      "@redhat-cloud-services/frontend-components-remediations": ["packages/remediations/dist"],
      "@redhat-cloud-services/frontend-components-remediations/*": ["packages/remediations/dist/*"],
      "@redhat-cloud-services/frontend-components-testing": ["packages/testing/dist"],
      "@redhat-cloud-services/frontend-components-testing/*": ["packages/testing/dist/*"],
      "@redhat-cloud-services/frontend-components-translations": ["packages/translations/dist"],
      "@redhat-cloud-services/frontend-components-translations/*": ["packages/translations/dist/*"],
      "@redhat-cloud-services/frontend-components-utilities": ["packages/utils/dist"],
      "@redhat-cloud-services/frontend-components-utilities/*": ["packages/utils/dist/*"],
      "@redhat-cloud-services/frontend-components/*": ["packages/components/dist/*"],
      "@redhat-cloud-services/rule-components": ["packages/rule-components/dist"],
      "@redhat-cloud-services/rule-components/*": ["packages/rule-components/dist/*"],
      "@redhat-cloud-services/tsc-transform-imports": ["packages/tsc-transform-imports/dist"],
      "@redhat-cloud-services/types": ["packages/types/dist"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
