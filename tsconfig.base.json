{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["jest", "@testing-library/react", "@testing-library/jest-dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@redhat-cloud-services/chrome": ["dist/@redhat-cloud-services/chrome"],
      "@redhat-cloud-services/chrome/*": ["dist/@redhat-cloud-services/chrome/*"],
      "@redhat-cloud-services/frontend-components": ["dist/@redhat-cloud-services/frontend-components"],
      "@redhat-cloud-services/frontend-components-advisor-components": ["dist/@redhat-cloud-services/frontend-components-advisor-components"],
      "@redhat-cloud-services/frontend-components-advisor-components/*": ["dist/@redhat-cloud-services/frontend-components-advisor-components/*"],
      "@redhat-cloud-services/frontend-components-charts": ["dist/@redhat-cloud-services/frontend-components-charts"],
      "@redhat-cloud-services/frontend-components-charts/*": ["dist/@redhat-cloud-services/frontend-components-charts/*"],
      "@redhat-cloud-services/frontend-components-config-utilities": ["dist/@redhat-cloud-services/frontend-components-config-utilities"],
      "@redhat-cloud-services/frontend-components-config-utilities/*": ["dist/@redhat-cloud-services/frontend-components-config-utilities/*"],
      "@redhat-cloud-services/frontend-components-notifications": ["dist/@redhat-cloud-services/frontend-components-notifications"],
      "@redhat-cloud-services/frontend-components-notifications/*": ["dist/@redhat-cloud-services/frontend-components-notifications/*"],
      "@redhat-cloud-services/frontend-components-remediations": ["dist/@redhat-cloud-services/frontend-components-remediations"],
      "@redhat-cloud-services/frontend-components-remediations/*": ["dist/@redhat-cloud-services/frontend-components-remediations/*"],
      "@redhat-cloud-services/frontend-components-testing": ["dist/@redhat-cloud-services/frontend-components-testing"],
      "@redhat-cloud-services/frontend-components-testing/*": ["dist/@redhat-cloud-services/frontend-components-testing/*"],
      "@redhat-cloud-services/frontend-components-translations": ["dist/@redhat-cloud-services/frontend-components-translations"],
      "@redhat-cloud-services/frontend-components-translations/*": ["dist/@redhat-cloud-services/frontend-components-translations/*"],
      "@redhat-cloud-services/frontend-components-utilities": ["dist/@redhat-cloud-services/frontend-components-utilities"],
      "@redhat-cloud-services/frontend-components-utilities/*": ["dist/@redhat-cloud-services/frontend-components-utilities/*"],
      "@redhat-cloud-services/frontend-components/*": ["dist/@redhat-cloud-services/frontend-components/*"],
      "@redhat-cloud-services/rule-components": ["dist/@redhat-cloud-services/rule-components"],
      "@redhat-cloud-services/rule-components/*": ["dist/@redhat-cloud-services/rule-components/*"],
      "@redhat-cloud-services/tsc-transform-imports": ["dist/@redhat-cloud-services/tsc-transform-imports"],
      "@redhat-cloud-services/types": ["dist/@redhat-cloud-services/types"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
